---
import '@fontsource/zen-kaku-gothic-new';
import '@fontsource/barlow-condensed';

import Header from '../components/Header.svelte';
import PageLinks from '../components/PageLinks.svelte';
import Footer from '../components/Footer.svelte';

export interface Props {
  title: string;
}

const { title } = Astro.props;
const mainTitle = 'minotake';
---

<!DOCTYPE html>
<html lang="ja" class="font-zen font-medium">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="bg-slate-50">
    <div class="mx-auto grid max-w-5xl grid-cols-8 gap-x-6 px-10">
      <div class="sticky top-0 z-10 col-span-8 -mx-10">
        <Header mainTitle={mainTitle} />
      </div>

      <div class="sticky top-32 col-span-2 mt-16 h-80">
        <PageLinks />
      </div>

      <div class="col-span-6 col-start-3 mt-16">
        <slot />
      </div>

      <div class="col-span-8 -mx-10 mt-16">
        <Footer />
      </div>
    </div>
    <style is:global></style>
  </body>
</html>
