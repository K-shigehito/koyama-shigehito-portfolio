---
import { HamburgerMenu } from "./hamburger-menu";
const { mainTitle } = Astro.props;

const links = [
  { href: "/", label: "トップ" },
  { href: "/about", label: "アバウト" },
  { href: "/contact", label: "お問合せ" },
];
---

<nav class="flex justify-between items-center py-6 px-4 bg-teal-50">
  <h1 class="text-teal-700 text-xl font-bold">{mainTitle}</h1>
  <ul class="gap-4 hidden md:flex">
    {
      links.map((item) => (
        <li>
          <a href={item.href}>{item.label}</a>
        </li>
      ))
    }
  </ul>
  <div class="md:hidden">
    <HamburgerMenu links={links} client:visible />
  </div>
</nav>
